{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    {
      "path": "pages/home/home",
      "style": {
        "navigationBarTitleText": "首页",
        "enablePullDownRefresh": true,
        "backgroundColor": "#efefef"
      }
    },
    {
      "path": "pages/category/category",
      "style": {
        "navigationBarTitleText": "借阅",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/cart/cart",
      "style": {
        "navigationBarTitleText": "书包",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/my/my",
      "style": {
        "navigationBarTitleText": "我的",
        "enablePullDownRefresh": false,
        "backgroundColor": "#efefef"
      }
    }
  ],
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#f7cb5a",
    "list": [
      {
        "pagePath": "pages/home/home",
        "iconPath": "static/tab_icons/home.png",
        "selectedIconPath": "static/tab_icons/home.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/category/category",
        "iconPath": "static/tab_icons/cate.png",
        "selectedIconPath": "static/tab_icons/cate.png",
        "text": "借阅"
      },
      {
        "pagePath": "pages/cart/cart",
        "iconPath": "static/tab_icons/cart.png",
        "selectedIconPath": "static/tab_icons/cart.png",
        "text": "书包"
      },
      {
        "pagePath": "pages/my/my",
        "iconPath": "static/tab_icons/my.png",
        "selectedIconPath": "static/tab_icons/my.png",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "拥豹童书馆",
    "navigationBarBackgroundColor": "#fdd25d",
    "backgroundColor": "#efefef"
  }
}
